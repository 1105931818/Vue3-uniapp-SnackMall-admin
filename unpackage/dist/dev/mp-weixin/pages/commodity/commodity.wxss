page {
  background-color: #f4f4f4;
}
.btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: white;
}
.btn button {
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  border-radius: 16rpx;
  background-color: #e7a055;
  color: white;
}
.btn button:nth-child(2) {
  background-color: #e2c48b;
}
.commod {
  width: 100%;
  display: flex;
}
.commod .left_view {
  width: 180rpx;
  background-color: white;
}
.commod .left_view .left_item {
  width: 98%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 2rpx;
}
.commod .left_view .active {
  background-color: #e2c48b;
  color: white;
}
.commod .right_view {
  flex: 1;
}
.commod .right_view .right_title {
  width: 96%;
  height: 200rpx;
  background-color: white;
  margin: auto;
  margin-top: 15rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 12rpx;
}
.commod .right_view .right_title image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 32rpx;
  display: block;
}
.commod .right_view .right_title .title {
  flex: 1;
  height: 180rpx;
  margin-left: 20rpx;
}
.commod .right_view .right_title .title .h1 {
  width: 320rpx;
  margin-bottom: 15rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.commod .right_view .right_title .title text {
  font-size: 26rpx;
  color: #a19fa3;
}
.commod .right_view .right_title .title .right_btn {
  width: 320rpx;
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.commod .right_view .right_title .title .right_btn text {
  color: orangered;
  font-size: 32rpx;
}
.commod .right_view .right_title .title .right_btn button {
  width: 120rpx;
  height: 60rpx;
  margin: 0;
  padding: 0;
  font-size: 26rpx;
  background-color: #e7a055;
  color: white;
}