page {
  background-color: #f4f4f4;
}
.top_view {
  height: 330rpx;
  position: relative;
  background-image: linear-gradient(to top, #e2c48b 0%, #e7a055 100%);
}
.top_view .profit {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
}
.top_view .profit .profit_view {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.top_view .profit .profit_view .profit_num {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  font-size: 32rpx;
}
.top_view .profit .profit_view .profit_num text:nth-child(2) {
  font-size: 50rpx;
  padding-top: 10rpx;
}
.top_view .profit .profit_view .profit_sale {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}
.top_view .profit .profit_view .profit_sale view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
.top_view .profit .profit_view .profit_sale view text:nth-child(1) {
  font-size: 28rpx;
  padding-bottom: 10rpx;
  color: #696969;
}
.top_view .profit .palaces {
  background-color: #ffffff;
  height: 280rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.top_view .profit .palaces .item {
  width: 25%;
  height: 120rpx;
  text-align: center;
  font-size: 26rpx;
}
.top_view .profit .palaces .item image {
  width: 90%;
  height: 60rpx;
  display: block;
  margin: auto;
  margin-bottom: 15rpx;
}
.top_view .profit .setup {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin: 25rpx 0;
}
.top_view .profit .setup view {
  height: 85rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}